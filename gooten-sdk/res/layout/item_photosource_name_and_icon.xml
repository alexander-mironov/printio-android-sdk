<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/bg_photosource_item"
    android:clickable="true"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/imageview_photo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_photo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/imageview_photo_icon"
        android:ellipsize="none"
        android:singleLine="true"
        android:textColor="@color/photosources_text"
        android:textSize="@dimen/text_size_photosources" />

</RelativeLayout>
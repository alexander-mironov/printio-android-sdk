<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_selector_products"
    android:padding="4dip" >

    <print.io.view.TextViewFontBold
        android:id="@+id/textview_category_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:gravity="center_horizontal"
        android:textColor="#212326"
        android:textSize="@dimen/text_size_large" />

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_category_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_category_title"
        android:layout_marginBottom="10dip"
        android:gravity="center_horizontal"
        android:lines="2"
        android:textColor="#555555"
        android:textSize="@dimen/text_size_medium" />

    <print.io.imageloader.MyImageViewSquare
        android:id="@+id/imageview_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_category_subtitle"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone" />

</RelativeLayout>